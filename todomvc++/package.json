{
  "name": "todomvc-plusplus",
  "version": "1.0.1",
  "description": "Expanding on TodoMVC to move it to production",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha src/server/test",
    "start": "node bin/server.js",
    "prestart": "sequelize db:migrate",
    "webpack": "node ./node_modules/webpack/bin/webpack.js",
    "webpack:dev:server": "webpack-dev-server",
    "dev": "NODE_ENV=dev run-p build:static dev:server",
    "dev:server": "nodemon bin/server.js -e 'js, html'",
    "build:static": "node ./bin/tasks/init_static.js && npm run webpack:dev:server",
    "prod": "NODE_ENV=production npm run webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwhinnery/todomvc-plusplus.git"
  },
  "keywords": [
    "tutorial",
    "node.js"
  ],
  "author": "Kevin Whinnery (front end code by Evan You)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwhinnery/todomvc-plusplus/issues"
  },
  "homepage": "https://github.com/kwhinnery/todomvc-plusplus#readme",
  "dependencies": {
    "body-parser": "^1.15.2",
    "director": "^1.2.8",
    "ejs": "^2.5.1",
    "express": "^4.14.0",
    "morgan": "^1.9.0",
    "pg": "^6.1.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.24.1",
    "sequelize-cli": "^2.4.0",
    "vue": "^1.0.26"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "browserify-shim": "^3.8.12",
    "chai": "^3.5.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "fs-extra": "^0.30.0",
    "grunt": "^1.0.1",
    "grunt-browserify": "^5.0.0",
    "grunt-concurrent": "^2.3.1",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-nodemon": "^0.4.2",
    "grunt-sass": "^1.2.1",
    "grunt-shell": "^1.3.1",
    "jquery": "^3.2.1",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.2",
    "npm-run-all": "^4.1.2",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "style-loader": "^0.19.1",
    "uglifyjs-webpack-plugin": "^1.1.5",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1"
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "browserify-shim": {
    "jquery": "global:$"
  }
}
